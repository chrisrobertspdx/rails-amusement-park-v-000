<%= form_for(user) do |f| %>

  <div class="field"> <%= f.label :name %><br>
  <%= f.text_field :name %></div>

  <div class="field"><%= f.label :height, "Height (in inches)" %><br>
  <%= f.text_field :height %></div>

  <div class="field"><%= f.label :happiness, "How happy are you? (1-5 scale)" %><br>
  <%= f.text_field :happiness %></div>
  
  <div class="field"><%= f.label :nausea, "How nauseous are you? (1-5 scale)" %><br>
  <%= f.text_field :nausea %></div>

  <div class="field"><%= f.label :tickets, "How many dollars are in your pocket?" %><br>
  <%= f.text_field :tickets %></div>

  <div class="field"><%= f.label :admin, "Check box if you are a theme park owner " %>
  <%= f.check_box :admin %></div>
  
  <div class="field"><%= f.label :password, "Password" %>
  <%= f.password_field :password %></div>
  
  <div class="field"><%= f.label :password, "Confirm Password" %>
  <%= f.password_field :password_confirmation %></div>
  
   <div class="actions">
    <%= f.submit %>
  </div>

<% end %>